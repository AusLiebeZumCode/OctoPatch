<UserControl x:Class="OctoPatch.DesktopClient.Views.MidiAttachedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:models="clr-namespace:OctoPatch.DesktopClient.Models"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance models:MidiAttachedNodeModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Channel -->
        <Label Grid.Row="0" Content="Channel (0...15)" FontWeight="Bold" />
        <TextBox Grid.Row="1" Text="{Binding Channel}" Margin="5 0 5 10" />

        <!-- Key -->
        <Label Grid.Row="2" Content="Key (0...127)" FontWeight="Bold" />
        <TextBox Grid.Row="3" Text="{Binding Key}" Margin="5 0 5 10" />

    </Grid>
</UserControl>
